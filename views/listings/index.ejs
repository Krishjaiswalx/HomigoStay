<% layout("/layouts/boilerplate") %>

  <div id="filters">
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-fire"></i></div>
      <p class="txt">Trending</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-bed"></i></div>
      <p class="txt">Rooms</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-mountain-city"></i></div>
      <p class="txt">Iconic Cities</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-mountain"></i></div>
      <p class="txt">Mountains</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-brands fa-fort-awesome"></i></div>
      <p class="txt">Castles</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-regular fa-snowflake"></i></div>
      <p class="txt">Arctic</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-tents"></i></div>
      <p class="txt">Camping</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-cow"></i></div>
      <p class="txt">Farms</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-igloo"></i></div>
      <p class="txt">Domes</p>
    </div>
    <div class="filter">
      <div class="icon"><i class="fa-solid fa-ship"></i></div>
      <p class="txt">Boats</p>
    </div>
    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display Total Including Taxes</label>
      </div>
    </div>
  </div>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 mt-3 justify-content-center">
    <% for(let listing of allListings) { %>
      <div class="card listing-card" style="width: 18rem">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <h5 class="card-title">
              <%= listing.title %>
            </h5>
            <p class="card-text">
              Price: â‚¹<%= listing.price %> /night
                <i class="tax-info" style="display: none;">&nbsp; &nbsp; +18% GST</i>
            </p>
          </div>
        </a>
      </div>
      <% } %>
  </div>

  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
      let taxInfo = document.getElementsByClassName("tax-info");
      for (let info of taxInfo) {
        info.style.display = (info.style.display === "none" || info.style.display === "") ? "inline" : "none";
      }
    });
  </script>